<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This calculation is used to discount a single cash flow for n periods." android:padding="10dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash Flow:" android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/pv_cashflow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount Rate:" android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/pv_discountrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of periods per year:" android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/pv_periods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of years:" android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/pv_years"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/pv_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate" />

    <TextView
        android:id="@+id/pv_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The present Value of the cash flow is:" android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/pv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Info on the theory behind it" />

</LinearLayout>